# ===============================================================
# ğŸ¤– PROSPECCIÃ“N DE DATOS ABIERTOS - AYTO. ARGANDA DEL REY
# ===============================================================
# Descarga el dataset de contratos menores, detecta novedades
# y envÃ­a un correo HTML de resumen por Gmail API
# ===============================================================

import os, pandas as pd, requests, io, base64
from google.colab import auth
from googleapiclient.discovery import build
from email.mime.text import MIMEText
from google_auth_oauthlib.flow import InstalledAppFlow

# ===============================================================
# âš™ï¸ CONFIGURACIÃ“N
# ===============================================================
URL_CSV = "https://datosabiertos.ayto-arganda.es/dataset/ccf698e6-191d-4b07-a6d1-f3aa2e90f7e8/resource/7ee4fe1d-0d52-4bcf-b6ac-e2f1b906df4c/download/vcontratosmenores3trimestre2025.csv"
DEST_EMAIL = "correo@ejemplo.com"   # correo simulado
LOCAL_FILE = "/content/contratos_guardados.csv"

# ===============================================================
# ğŸ” AUTENTICACIÃ“N CON GOOGLE (GMAIL)
# ===============================================================
auth.authenticate_user()

SCOPES = ['https://www.googleapis.com/auth/gmail.send']
flow = InstalledAppFlow.from_client_secrets_file('/content/client_secret.json', SCOPES)
creds = flow.run_local_server(port=0)

# ===============================================================
# ğŸ“¥ DESCARGA DE DATOS ABIERTOS
# ===============================================================
r = requests.get(URL_CSV)
r.encoding = "utf-8"
df = pd.read_csv(io.StringIO(r.text))
print(f"âœ… {len(df)} registros descargados desde el portal de datos abiertos.")

# ===============================================================
# ğŸ” DETECCIÃ“N DE NUEVOS REGISTROS
# ===============================================================
if os.path.exists(LOCAL_FILE):
    old = pd.read_csv(LOCAL_FILE)
    nuevos = df[~df.iloc[:,0].isin(old.iloc[:,0])]
else:
    nuevos = df

df.to_csv(LOCAL_FILE, index=False)

# ===============================================================
# âœ‰ï¸ ENVÃO DE CORREO HTML SI HAY NOVEDADES
# ===============================================================
if len(nuevos) > 0:
    html = """
    <html>
      <body style='font-family: Arial, sans-serif;'>
        <h2 style='color:#0A5394;'>ğŸ“Š Nuevos contratos menores â€“ Ayuntamiento de Arganda</h2>
        <p>Se han detectado <b>{}</b> nuevos registros en el dataset pÃºblico:</p>
        <table border='1' cellspacing='0' cellpadding='6'>
          <tr style='background-color:#f0f0f0;'>""".format(len(nuevos))

    # Encabezados
    for col in nuevos.columns:
        html += f"<th>{col}</th>"
    html += "</tr>"

    # Filas (solo primeras 10)
    for i, row in nuevos.head(10).iterrows():
        html += "<tr>" + "".join(f"<td>{str(v)}</td>" for v in row.values) + "</tr>"
    html += "</table><p>âš ï¸ Solo se muestran los 10 primeros registros.</p></body></html>"

    message = MIMEText(html, 'html')
    message['to'] = DEST_EMAIL
    message['subject'] = "ğŸ†• Nuevos contratos menores - Ayuntamiento de Arganda"
    raw = base64.urlsafe_b64encode(message.as_bytes()).decode()

    service = build('gmail', 'v1', credentials=creds)
    service.users().messages().send(userId='me', body={'raw': raw}).execute()

    print(f"ğŸ“§ Correo enviado a {DEST_EMAIL}")
else:
    print("ğŸ” Sin novedades detectadas.")
